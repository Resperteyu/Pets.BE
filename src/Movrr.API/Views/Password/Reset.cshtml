@model ResetPasswordRequest

@{
  ViewData["Title"] = "Reset Password";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
<div class="form-gap"></div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="text-center">
            <h3><i class="fa fa-lock fa-4x"></i></h3>
            @if(@ViewBag.result == true)
            {
              <p class="success">You can login now!</p>
            }
            else if(@ViewBag.result == false) 
            {
              <p class="failure">There has been an error</p>
            }

            <h2 class="text-center">Forgot Password?</h2>
            <p>You can reset your password here.</p>
            <div class="panel-body">

              <form id="reset-password" role="form" autocomplete="off" class="form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Token" />
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                  <div class="input-group">
                    <input asp-for="Password" placeholder="New password" class="form-control" type="password">
                    <i class="fa fa-eye togglePassword"></i>
                  </div>
                  <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                  <label asp-for="ConfirmPassword" class="control-label"></label>
                  <div class="input-group">
                    <input asp-for="ConfirmPassword" placeholder="Confirm password" class="form-control"
                      type="password">
                      <i class="fa fa-eye togglePassword"></i>
                  </div>
                  <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                  <input name="submit" class="btn btn-lg btn-primary btn-block" value="Create Password" type="submit">
                </div>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}